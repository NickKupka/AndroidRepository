<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.engineering.allgeier.mycetesterapp.bluetoothmyceapp.MainActivity">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CE Device Tester App\nVERSION 1.0.2\nProgrammed by Dominik Kupka (Systemengineering)\nrecomli GmbH\nBretonischer Ring 13, 85630 Grasbrunn\nDate: 11.12.2017"
